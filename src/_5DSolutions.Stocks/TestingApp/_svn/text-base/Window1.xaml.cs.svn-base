using _5DSolutions.Stocks.LowerLevelBusiness.DataConverters;

namespace TestingApp
{
    /// <summary>
    /// Interaction logic for Window1.xaml
    /// </summary>
    public partial class Window1 : Window
    {
        public Window1()
        {
            InitializeComponent();
        }

        private void Button_Click(object sender, RoutedEventArgs e)
        {
            if (string.Empty != uiSymbolBox.Text)
            {

                YahooCSVStockDataProvider prov = new YahooCSVStockDataProvider();

                string tmp = prov.GetLatestRawStockData(uiSymbolBox.Text);

                YahooCSVStockDataConverter<StockInfo> conv = new YahooCSVStockDataConverter<StockInfo>();

                List<StockInfo> stocks = conv.ConvertTo(tmp, typeof(List<StockInfo>)) as List<StockInfo>;

                TextBox t = new TextBox();

                StockInfo stock = stocks.First();

                t.Text = string.Format("{0}: ${1} (on {2} at {3})", stock.Symbol, stock.Price, stock.Timestamp.ToShortDateString(), stock.Timestamp.ToShortTimeString());
                uiScroller.Content = t;
            }

        }
    }
}
