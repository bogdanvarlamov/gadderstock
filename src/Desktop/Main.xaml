<Window x:Class="_5DSolutions.Stocks.Desktop.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    xmlns:vw="clr-namespace:_5DSolutions.Stocks.Presentation.Wpf.Views;assembly=_5DSolutions.Stocks.Presentation"
    Title="GadderStock" Height="300" Width="300">
    <Grid>
        <Border BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#333" Offset="0" />
                    <GradientStop Color="#777" Offset="0.5" />
                    <GradientStop Color="#111" Offset="1" />
                </LinearGradientBrush>
            </Border.BorderBrush>
            <vw:StocksPresenterView Background="Transparent"/>
        </Border>
    </Grid>
</Window>
